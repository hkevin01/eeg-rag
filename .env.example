# EEG-RAG Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.2

# Data Paths (relative to project root)
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
DATA_EMBEDDINGS_DIR=data/embeddings

# FAISS Configuration
FAISS_INDEX_PATH=data/embeddings/faiss_index.bin
FAISS_METADATA_PATH=data/embeddings/chunk_metadata.jsonl
EMBEDDING_MODEL=microsoft/BiomedNLP-PubMedBERT-base-uncased-abstract-fulltext
EMBEDDING_DIM=768

# Retrieval Configuration
DEFAULT_TOP_K=10
MIN_SIMILARITY_SCORE=0.5
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Neo4j Configuration (Optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=eeg-rag

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/eeg-rag.log

# PubMed API Configuration
PUBMED_API_KEY=
PUBMED_EMAIL=your_email@example.com
PUBMED_RATE_LIMIT=3

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=32
ENABLE_GPU=false

# Development Settings
DEBUG=false
PROFILE_PERFORMANCE=false
