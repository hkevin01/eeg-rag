# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyw}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.java]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_style = space
indent_size = 2
